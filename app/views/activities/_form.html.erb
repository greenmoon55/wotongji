<div class="well-white-activity">
<%= form_for @activity, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="space1-activities">
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :start_time %>
  <% if @activity.start_time? %>
    <%= f.text_field :start_time, :autocomplete => :off, :value => @activity.start_time.to_s(:yymmdd)%>
  <% else %>
    <%= f.text_field :start_time, :autocomplete => :off %>
  <% end %>
  <%= f.time_select :start_time, :ignore_date => true, :minute_step => 5%>


  <%= f.label :end_time %>
  <% if @activity.end_time? %>
    <%= f.text_field :end_time, :autocomplete => :off, :value => @activity.end_time.to_s(:yymmdd)%>
  <% else %>
    <%= f.text_field :end_time, :autocomplete => :off %>
  <% end %>
  <%= f.time_select :end_time, :ignore_date => true, :minute_step => 5%>

  <%= f.label :category_id, "目录" %>
  <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]} %>
  
  <%= f.submit "提交", class: "dailin btn btn-default btn-primary" %>
  </div>
  
  <div class="space2-activities">
  <%= f.label :content %>
  <%- # f.text_area :content %>
  
  <%= f.file_field :image %>
  <textarea cols="20" id="activity_content" name="activity[content]" rows="14"></textarea>   
  
 
  </div>

  <%= f.submit "发布", class: "dailin btn btn-default btn-primary" %>
  <% end %>
  

</div>


<script>
    // $("#activity_start_time, #activity_end_time").datetimepicker({dateFormat: 'yy-mm-dd'});
  $("#activity_start_time").datepicker({
    format: 'yyyy-mm-dd',
    language: 'zh-CN'
  })

  $("#activity_end_time").datepicker({
    format: 'yyyy-mm-dd',
    language: 'zh-CN'
  })
</script>
