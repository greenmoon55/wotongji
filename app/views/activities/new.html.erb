<% provide(:title, "发布活动") %>
<h1>发布活动++</h1>

<%= form_for(@activity) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :start_time %>
  <%= f.text_field :start_time %>

  <%= f.label :end_time %>
  <%= f.text_field :end_time %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.submit "发布", class: "btn btn-large btn-primary" %>
<% end %>

<script>
    $("#activity_start_time, #activity_end_time").datetimepicker({dateFormat: 'yy-mm-dd'});
</script>
