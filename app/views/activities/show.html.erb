<% provide(:title, @activity.title) %>
<div class="row">
  <div class="span8">
   <div class="show-content">

    <h2><%= @activity.title %></h2>
    
    <div class="show-up">

      <%= render 'interest_form' if signed_in? %>
      <%= image_tag @activity.image_url(:thumb) if @activity.image? %>
   
         <div class="show-activity-pic">
           <img src="http://duocaiii.com/resource/img/photo/act//200_200/718b82ca45d43e6c664310538e33e350.png">
         </div>

         <div class="show-info">
            <ul>
              <li>
                <b>开始时间:</b>
                <%= @activity.start_time %>
              </li>
              <li>
                <b>结束时间:</b>
                <%= @activity.end_time %>
              </li>
              <li>
                <b>发布者:</b>
                <%= @activity.user.name %>
              </li>
         </div>
         <div class="show-favor">
            <ul>
             <li>xx人感兴趣</li>
             <li>感兴趣</li>
            </ul>

         </div>
    </div>

    <div class="show-share">
      <li>
<script type="text/javascript" src="http://widget.renren.com/js/rrshare.js"></script>
<a name="xn_share" onclick="shareClick()" type="button_large" href="javascript:;"></a>
<script type="text/javascript">
  function shareClick() {
    var rrShareParam = {
      resourceUrl : '', //分享的资源Url
      srcUrl : '',  //分享的资源来源Url,默认为header中的Referer,如果分享失败可以调整此值为resourceUrl试试
      pic : '',   //分享的主题图片Url
      title : '',   //分享的标题
      description : ''  //分享的详细描述
    };
    rrShareOnclick(rrShareParam);
  }
</script>
      <script type="text/javascript" charset="utf-8">
(function(){
  var _w = 106 , _h = 24;
  var param = {
    url:location.href,
    type:'5',
    count:'', /**是否显示分享数，1显示(可选)*/
    appkey:'', /**您申请的应用appkey,显示分享来源(可选)*/
    title:'', /**分享的文字内容(可选，默认为所在页面的title)*/
    pic:'', /**分享图片的路径(可选)*/
    ralateUid:'2703964723', /**关联用户的UID，分享微博会@该用户(可选)*/
  language:'zh_cn', /**设置语言，zh_cn|zh_tw(可选)*/
    rnd:new Date().valueOf()
  }
  var temp = [];
  for( var p in param ){
    temp.push(p + '=' + encodeURIComponent( param[p] || '' ) )
  }
  document.write('<iframe allowTransparency="true" frameborder="0" scrolling="no" src="http://hits.sinajs.cn/A1/weiboshare.html?' + temp.join('&') + '" width="'+ _w+'" height="'+_h+'"></iframe>')
})()
</script>  
 
      </li>
 
    </div>

   
      <li>
        <b>活动内容:</b>
          <div class="activity-content">
						<%- #simple_format(@activity.content, {}, :sanitize => true) %>
            <%= simple_format(Rinku.auto_link(@activity.content)) %>
          </div>
      </li>
    </ul>
    <b>评论</b>
    <% @activity.comments.each do |comment| %>
      <div class="comment">
        <div class="avatar"><%= gravatar_for comment.user%> </div>
        <div class="comment-content">
          <div class="content"><%= comment.content %></div>
          <%= link_to comment.user.name, comment.user %>
          发表于
          <span class="timestamp">
            <%= comment.created_at.in_time_zone.to_s(:cn) %>
          </span>
        </div>
      </div>
    <% end %>
    </ul>
    <%= form_for :comment, :url => activity_comments_path(@activity) do |f| %>
      <div class="field">
        <%= f.hidden_field :activity_id, :value => @activity.id %>
        <%= f.text_area :content, :cols => 65, :rows => 4, :placeholder => "说点什么吧..." %>
      </div>
      <%= f.submit "评论", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>


  <div class="span4">
    <p>感兴趣的人:</p>
    <% if @activity.interestedusers.any? %>
      <div class="user-avatars">
        <% @activity.interestedusers.each do |user| %>
          <div class="float-left">
            <p><%= link_to gravatar_for(user, size: 30), user %></p>
            <p><%= link_to user.name, user %></p>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
