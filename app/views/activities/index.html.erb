        <div class="row" id="tabcontent1">
          <span class="controls">
            <%= link_to "全部活动", { controller: "activities", action: "all" }, remote: true %>
          </span>
          <span class="controls">
            <%= link_to "未开始的活动", { controller: "activities", action: "unstart" }, remote: true %>
          </span>
          <span class="controls">
            <%= link_to "正在进行的活动", { controller: "activities", action: "started" }, remote: true %>
          </span>
          <span class="controls">
            <%= link_to "已结束的活动", { controller: "activities", action: "ended" }, remote: true %>
          </span>
        </div>
          <!--End Tabcontent 1-->
        
        <!--Start Tabcontent 2-->
        <div class="row" id="tabcontent2">
          <% @categories.each do |category| %>
            <span class="controls">
              <%= link_to category.name, { controller: "activities", action: "category", id: category.id },
              remote: true %>
            </span>
          <% end %>
        </div>
