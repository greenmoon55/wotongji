<% provide(:title, '全部活动') %>

<div class="row">
  <div class="span9">
    <div class="row">
      <span class="controls">
        <%= link_to "全部活动", { controller: "activities", action: "all" } %>
      </span>
      <span class="controls">
        <%= link_to "未开始的活动", { controller: "activities", action: "unstart" }, remote: true %>
      </span>
      <span class="controls">
        <%= link_to "正在进行的活动", { controller: "activities", action: "started" }%>
      </span>
      <span class="controls">
        <%= link_to "已结束的活动", { controller: "activities", action: "ended" }%>
      </span>
    </div>
    <div id="activities">
      <% unless @activities == nil %>
        <%= render 'shared/activities_form' %>
      <% end %>
    </div>
  </div>
  <div class="span3">
    <%= form_tag("/search", method:"get", remote: true) do %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("查找活动") %>
    <% end %>
    <h4>新加入：</h4>
  </div>
</div>
