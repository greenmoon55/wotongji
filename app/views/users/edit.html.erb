<% provide(:title, "编辑个人资料") %>
<div class="row">
	<div class="span12">
		<div>
			<h1>编辑个人资料</h1>
      <%= render 'shared/error_messages', :object => @user %>
      <%= gravatar_for(@user) %>
      <%= link_to "编辑头像", "http://gravatar.com" %>
			<%= form_for(@user) do |f| %>
				<%= f.label :current_password, "当前密码" %>
				<%= f.password_field :current_password %>

				<%= f.label :email %>
				<%= f.text_field :email %>

				<%= f.label :name, "用户名" %>
				<%= f.text_field :name %>

				<%= f.label :password, "密码" %>
				<%= f.password_field :password %>

				<%= f.label :password_confirmation, "密码确认" %>
				<%= f.password_field :password_confirmation %>

				<%= f.submit "更新", class: "btn btn-default btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
