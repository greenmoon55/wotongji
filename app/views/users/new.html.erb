<h1>注册用户</h1>

<div class="row">
	<div>
		<%= form_for(@user) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "注册", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
