<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
        <%= link_to "我同济", root_path, class: "brand" %>
        <!-- <a class="brand" href="#">Home</a> -->
        <form class="navbar-form pull-right">
        <ul class="nav">
    	    <li><%= link_to "发布", new_activity_path %></li>
          <% if signed_in? %>
            <li class="user-avatars"><%= link_to gravatar_for(current_user, size: 20) + current_user.name, 
                                          current_user %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                账号<b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "账户设置", edit_user_path(current_user) %></li>
                <li><%= link_to "活动管理", "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "登出", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><a class="" data-toggle="modal" href="#signin">登录</a></li>
       	    <li><%= link_to "注册", signup_path %></li>
          <% end %>
    	  </ul>
        </form>
    </div>
  </div>
</div>

<div id="modals">
  <div class="modal hide fade" id="signin" style="display: none">
    <div class="modal-header">
      <a class="close" data-dismiss="modal">×</a>
      <h3>登录</h3>
    </div>
    <div class="modal-body">
      <%= form_tag signin_path do%>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email]%>

        <%= label_tag :password, "密码"%>
        <%= password_field_tag :password %>

        <%= label_tag :remember_me %>
        <%= check_box_tag :remember_me %>

        <%= submit_tag "登录", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal">关闭</a>
    </div>
  </div>
</div>

